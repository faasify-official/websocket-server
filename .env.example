# ===============================================
# Server Configuration
# ===============================================

# WebSocket server port
WS_PORT=8080

# HTTP API base URL (for REST API integration)
HTTP_API_URL=http://localhost:3000

# CORS allowed origin (frontend URL)
CORS_ORIGIN=http://localhost:5173

# ===============================================
# Connection Settings
# ===============================================

# Heartbeat interval in milliseconds (30 seconds)
HEARTBEAT_INTERVAL=30000

# Typing indicator timeout in milliseconds (3 seconds)
TYPING_TIMEOUT=3000

# Maximum message size in bytes (10KB)
MAX_MESSAGE_SIZE=10000

# Connection timeout in milliseconds (60 seconds)
CONNECTION_TIMEOUT=60000

# ===============================================
# Logging
# ===============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Environment (development, production)
NODE_ENV=development
